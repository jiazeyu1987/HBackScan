# 医院层级扫查微服务 - 环境变量配置示例
# 复制此文件为 .env 并填入实际配置值

# =============================================================================
# 服务器配置
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=false
WORKERS=1

# =============================================================================
# 数据库配置
# =============================================================================
DATABASE_URL=sqlite:///data/hospital_scanner.db
# 如果使用PostgreSQL，请取消下面注释并配置
# DATABASE_URL=postgresql://user:password@localhost:5432/hospital_scanner

# =============================================================================
# LLM服务配置
# =============================================================================
# MiniMax API配置
LLM_API_KEY=your_minimax_api_key_here
LLM_BASE_URL=https://api.minimax.chat/v1/text/chatcompletion_pro
LLM_MODEL=abab6.5s-chat
LLM_TIMEOUT=30

# 如果使用其他LLM服务，可以配置如下
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# Redis配置（用于缓存和任务队列）
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_TIMEOUT=30

# =============================================================================
# 安全配置
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS设置
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE"]
ALLOWED_HEADERS=["*"]

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/scanner.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =============================================================================
# 任务配置
# =============================================================================
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT=300
CLEANUP_INTERVAL_HOURS=24
MAX_TASKS_PER_HOUR=100

# =============================================================================
# 缓存配置
# =============================================================================
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=hospital_scanner:

# =============================================================================
# 邮件配置（用于通知）
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@hospital-scanner.com

# =============================================================================
# 监控和告警
# =============================================================================
MONITORING_ENABLED=true
ALERT_EMAIL=admin@hospital-scanner.com
HEALTH_CHECK_INTERVAL=60

# =============================================================================
# 文件存储配置
# =============================================================================
UPLOAD_DIR=data/uploads
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt,.xlsx

# =============================================================================
# API限流配置
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# =============================================================================
# 开发和测试配置
# =============================================================================
# 设置为true启用开发模式
DEV_MODE=false
# 设置为true启用测试模式
TEST_MODE=false
# 模拟LLM响应（不调用真实API）
MOCK_LLM_RESPONSE=false

# =============================================================================
# 第三方服务配置
# =============================================================================
# 医院信息API（如有）
HOSPITAL_API_KEY=
HOSPITAL_API_URL=

# 地图API（用于地址验证）
MAP_API_KEY=
MAP_API_URL=

# =============================================================================
# 性能配置
# =============================================================================
# 数据库连接池大小
DB_POOL_SIZE=10
DB_POOL_MAX_OVERFLOW=20
# HTTP连接池大小
HTTP_POOL_CONNECTIONS=10
HTTP_POOL_MAXSIZE=20